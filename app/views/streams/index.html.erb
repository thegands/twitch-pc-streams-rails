<h1>Listing streams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Title</th>
      <th>Preview</th>
      <th>Viewers</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streams.each do |stream| %>
      <tr>
        <td><%= stream.name %></td>
        <td><%= stream.url %></td>
        <td><%= stream.title %></td>
        <td><%= stream.preview %></td>
        <td><%= stream.viewers %></td>
        <td><%= stream.game.name %></td>
        <td><%= link_to 'Show', stream %></td>
        <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
        <td><%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @streams %>

<br>

<%= link_to 'New Stream', new_stream_path %>
